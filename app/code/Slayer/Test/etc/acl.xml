<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Slayer_Test::slayer_main" title="Customers and Orders" translate="title" sortOrder="10">
                    <resource id="Slayer_Test::slayer_manage_customers" title="All My Customers" translate="title" sortOrder="10">
                        <resource id="Slayer_Test::slayer_manage_customers_actions" title="Actions" translate="title" sortOrder="10">
                            <resource id="Slayer_Test::customer_add" title="Add Customer" translate="title" sortOrder="10" />
                            <resource id="Slayer_Test::customer_edit" title="Edit Customer" translate="title" sortOrder="20" />
                            <resource id="Slayer_Test::customer_delete" title="Delete Customer" translate="title" sortOrder="30" />
                            <resource id="Slayer_Test::customer_mass_delete" title="Mass Delete Customers" translate="title" sortOrder="30" />
                        </resource>
                    </resource>
                    <resource id="Slayer_Test::slayer_manage_orders" title="All My Orders" translate="title" sortOrder="10">
                        <resource id="Slayer_Test::slayer_manage_orders_actions" title="Actions" translate="title" sortOrder="10">
                            <resource id="Slayer_Test::order_add" title="Add Order" translate="title" sortOrder="10" />
                            <resource id="Slayer_Test::order_edit" title="Edit Order" translate="title" sortOrder="20" />
                            <resource id="Slayer_Test::order_delete" title="Delete Order" translate="title" sortOrder="30" />
                            <resource id="Slayer_Test::order_mass_delete" title="Mass Delete Orders" translate="title" sortOrder="30" />
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Slayer_Test::slayer" title="Slayer integration" translate="title" sortOrder="50" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
