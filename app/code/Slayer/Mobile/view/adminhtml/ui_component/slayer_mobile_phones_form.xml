<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">slayer_mobile_phones_form.phones_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Phones Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save_and_continue" class="Slayer\Mobile\Block\Adminhtml\Buttons\PhoneSaveAndContinueButton"/>
            <button name="save" class="Slayer\Mobile\Block\Adminhtml\Buttons\PhoneSaveButton"/>
            <button name="delete" class="Slayer\Mobile\Block\Adminhtml\Buttons\PhoneDeleteButton"/>
            <button name="back" class="Slayer\Mobile\Block\Adminhtml\Buttons\PhoneBackButton"/>
        </buttons>
        <namespace>slayer_mobile_phones_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>slayer_mobile_phones_form.phones_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="phones_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="mobile_admin/phones/save"/>
        </settings>
        <dataProvider class="Slayer\Mobile\Model\Phones\DataProvider" name="phones_form_data_source">
            <settings>
                <requestFieldName>entity_id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="entity_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">phones</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>entity_id</dataScope>
            </settings>
        </field>
        <field name="manufacturer_id" component="Magento_Ui/js/form/element/select" sortOrder="20" formElement="select">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Manufacturer ID</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Slayer\Mobile\Model\ResourceModel\Manufacturer\Collection"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="model" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">phones</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Model</label>
                <dataScope>model</dataScope>
            </settings>
        </field>
        <field name="os" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">phones</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Os</label>
                <dataScope>os</dataScope>
            </settings>
        </field>
        <field name="resolution" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">phones</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Resolution</label>
                <dataScope>resolution</dataScope>
            </settings>
        </field>
        <field name="ram" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">phones</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">RAM</label>
                <dataScope>ram</dataScope>
            </settings>
        </field>
        <field name="cpu" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">phones</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">CPU</label>
                <dataScope>cpu</dataScope>
            </settings>
        </field>
        <field name="battery" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">phones</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Battery</label>
                <dataScope>battery</dataScope>
            </settings>
        </field>
        <field name="description" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">phones</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Description</label>
                <dataScope>description</dataScope>
            </settings>
        </field>
        <field name="released" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">phones</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Released</label>
                <dataScope>released</dataScope>
            </settings>
        </field>
        <field name="photo" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">phones</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Photo</label>
                <dataScope>photo</dataScope>
            </settings>
        </field>
        <field name="price" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">phones</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Price</label>
                <dataScope>price</dataScope>
            </settings>
        </field>
    </fieldset>
</form>