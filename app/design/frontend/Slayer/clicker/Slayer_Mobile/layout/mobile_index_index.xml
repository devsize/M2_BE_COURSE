<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="main">
            <container name="category.view.container" htmlTag="div" htmlClass="category-view" after="-">
                <block class="Slayer\Mobile\Block\Manufacturer" name="manufacturer.block" template="Slayer_Mobile::manufacturer-template.phtml">
                    <arguments>
                        <argument name="view_model" xsi:type="object">Slayer\Mobile\ViewModel\MobileViewModel</argument>
                        <argument name="manufacturers_count" xsi:type="object">Slayer\Mobile\ViewModel\MobileViewModel</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
