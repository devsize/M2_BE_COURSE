<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Slayer_Mobile::slayer_mobile" title="Manufacturers and Phones" translate="title" sortOrder="10">
                    <resource id="Slayer_Mobile::manage_manufacturers" title="Mobile Manufacturers" translate="title" sortOrder="10">
                        <resource id="Slayer_Mobile::manage_manufacturers_actions" title="Actions" translate="title" sortOrder="10">
                            <resource id="Slayer_Mobile::manufacturer_add" title="Add Manufacturer" translate="title" sortOrder="10" />
                            <resource id="Slayer_Mobile::manufacturer_edit" title="Edit Manufacturer" translate="title" sortOrder="20" />
                            <resource id="Slayer_Mobile::manufacturer_inline_edit" title="Inline Edit Manufacturer" translate="title" sortOrder="30" />
                            <resource id="Slayer_Mobile::manufacturer_delete" title="Delete Manufacturer" translate="title" sortOrder="40" />
                            <resource id="Slayer_Mobile::manufacturer_mass_delete" title="Mass Delete Manufacturer" translate="title" sortOrder="50" />
                            <resource id="Slayer_Mobile::manufacturer_save" title="Save Manufacturer" translate="title" sortOrder="60" />
